import csv
fichier = open("D:\Donnees\Intergenic.txt", "w")
with open('D:\Donnees\Intergenic-all.txt', 'rb') as csvfile:
    spamreader = csv.reader(csvfile, delimiter='\t')
    for row in spamreader:
        if row[2]=="intergenic":
            debut=int(row[3])
            fin=int(row[4])
            with open('D:\Donnees\Genome-sequence.txt', 'rb') as seq:
                lecture=file.read(seq)
                sequence= lecture[debut:fin]
                fichier.write(">intergenic"+"\t"+"NA"+"\t"+row[3]+"\t"+row[4]+"\t"+"Intergenic"+"\n"+sequence+"\n")
fichier.close()


